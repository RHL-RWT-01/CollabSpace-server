# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/collabspace
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Optional: JWT Refresh Token Secret (if implementing refresh token rotation)
# JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_here_change_in_production

# Cookie Configuration
COOKIE_SECRET=your_super_secret_cookie_key_here_change_in_production
# For cross-site deployments (frontend and backend on different domains):
# Use COOKIE_SAMESITE=none with COOKIE_DOMAIN=your.backend.domain
# For same-site deployment: use lax or strict
COOKIE_DOMAIN=your.domain.com
COOKIE_SAMESITE=none   # none | lax | strict

# Resend Email Configuration
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name
# Optional: Set to 'true' to send emails in non-production environments
EMAIL_SEND_ENABLED=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
AI_RATE_LIMIT_PER_HOUR=20

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here
RAZORPAY_PLAN_ID_PRO=plan_your_pro_plan_id
RAZORPAY_PLAN_ID_TEAMS=plan_your_teams_plan_id

# WebRTC Configuration
# Maximum participants allowed in a video call
MAX_PARTICIPANTS=8

# TURN server configuration for WebRTC relay
TURN_SECRET=your_turn_server_secret_here
TURN_URLS=turn:your-turn-server.com:3478

# Rate limiting for WebRTC signaling (requests per minute per IP)
WEBRTC_RATE_LIMIT=30

# Export limits configuration (daily export limits by plan)
EXPORT_DAILY_LIMIT_FREE=5
EXPORT_DAILY_LIMIT_PRO=50
EXPORT_DAILY_LIMIT_TEAMS=-1

# Export file size limits in MB by plan
EXPORT_PNG_SIZE_LIMIT_FREE=10
EXPORT_PNG_SIZE_LIMIT_PRO=50
EXPORT_PNG_SIZE_LIMIT_TEAMS=50

# Export retention by plan (days)
EXPORT_RETENTION_DAYS_FREE=7
EXPORT_RETENTION_DAYS_PRO=30
EXPORT_RETENTION_DAYS_TEAMS=90
# Max generic export size (MB)
EXPORT_MAX_SIZE_MB=50